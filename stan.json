{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-ddf13fb0",
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "stan {{timestamp}}"
  }],
  "provisioners": [
    {
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get install python-pip libssl-dev -y",
      "sudo pip install ansible"
    ]
  },

    {
    "type": "ansible-local",
    "playbook_file": "stansible/local.yml"
  }]
}

